enum Permission {
  ADMIN
  USER
  PERMISSIONUPDATE
}

enum FoodType {
  BAKED
  CHEESE
  CONDIMENT
  DAIRY
  DRINK
  FRUIT
  MEAT
  OTHER
  TEA
  VEGETABLE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
}

type Food {
  id: ID! @id
  name: String!
  subName: String
  types: [FoodType!]! @scalarList(strategy: RELATION)
  image: String
}

type Ingredient {
  id: ID! @id
  food: Food!
  quantity: Float!
}

type Recipe {
  id: ID! @id
  name: String!
  ingredients: [Ingredient!]!
  instructions: String
}

type MealDay {
  id: ID! @id
  recipe: Recipe!
  date: DateTime!
}

type MealPlan {
  id: ID! @id
  startDate: DateTime!
  endDate: DateTime!
  mealDays: [MealDay!]!
}